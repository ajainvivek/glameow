{
  "name": "glameow",
  "version": "0.1.8",
  "description": "JSON based dynamic component generation",
  "main": "dist/glameow.js",
  "source": "src/index.js",
  "bin": "dist/cli.js",
  "repository": "ajainvivek/glameow",
  "scripts": {
    "build": "npm run build:cli && npm run build:glameow && npm run set:env",
    "build:cli": "microbundle --i src/{cli,index}.js --o dist/{cli,index}.js --format cjs --compress false  --sourcemap false",
    "build:glameow": "microbundle --i src/index.js --o dist --format cjs",
    "set:env": "echo '#!/usr/bin/env node' | cat - dist/cli.js > temp && mv temp dist/cli.js",
    "prepublishOnly": "npm run build",
    "release": "npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "eslintConfig": {
    "extends": "eslint-config-developit",
    "rules": {
      "prefer-spread": 0,
      "prefer-rest-params": 0
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "dynamic component",
    "json component",
    "vue component"
  ],
  "author": "Ajain Vivek <ajainvivek07@gmail.com> (http://chaicode.com)",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-developit": "^1.1.1",
    "microbundle": "^0.4.3"
  },
  "dependencies": {
    "js-beautify": "^1.8.1",
    "jsdom": "^12.0.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1"
  }
}
